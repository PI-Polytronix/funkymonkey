# Security Headers for Cloudflare/Netlify
# Polytronix Website

# Global Security Headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), fullscreen=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=(), autoplay=(), bluetooth=(), interest-cohort=()
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  # Enable COEP only if all cross-origin resources support CORP/CORS
  Cross-Origin-Embedder-Policy: require-corp
  # Content Security Policy (adjust if you use external services)
  Content-Security-Policy: default-src 'none'; base-uri 'self'; frame-ancestors 'none'; form-action 'self'; upgrade-insecure-requests; connect-src 'self'; img-src 'self' data:; font-src 'self' data:; script-src 'self'; style-src 'self' 'unsafe-inline'

# Cache static assets (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - no cache for immediate updates
/*.html
  Cache-Control: no-cache, no-store, must-revalidate




  
